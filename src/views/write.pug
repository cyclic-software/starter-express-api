extends base
block content
    div.board-form-wrapper
        if errorMessage
            span=errorMessage
        form(method="POST" enctype="multipart/form-data").board-form
            h3.title-name=pageTitle
            img(src=`${loggedInUser.boardImg ? (isHeroku ? loggedInUser.boardImg : "/" + loggedInUser.boardImg) : "/image/cafe_logo.png"}` width="100" height="100")
            br
            hr
            div.col-12
                label(for="inputTitle").form-label üìùBoard Title
                input(type="text" placeholder="Title" name="title" required maxLength=30).form-control#inputTitle
            br
            div.col-12
                label(for="inputBoardImg").form-label üé® Board Img
                input(type="file" placeholder="Board Img" name="boardImg" accept="*/image").form-control#inputBoardImg
            br
            p.board-title--text ‚õ≥ Textarea
            div.input-group 
                span.input-group-text Textarea
                textarea(aria-label="With textarea" name="content" required maxLength=300).form-control
            br
            input(type="submit" value="Write Board").btn.btn-primary