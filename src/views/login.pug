extends base
block content
    div.login-form-wrapper
        div.login-form
            if errorMessage
                p(style="color: red;")=errorMessage
                br
            h3.title-name ☕Login
            form(method="POST" action="/login").row.g-3
                div.col-12
                    label(for="inputUsername").form-label Username
                    input(type="text" placeholder="Username" name="username").form-control#inputUsername
                div.col-12
                    label(for="inputPassword").form-label Password
                    input(type="password" placeholder="Password" name="password").form-control#inputAddress2
                div.col-12
                    button(type="submit").btn.btn-primary Login &rarr;
                hr
                div.col-12
                    p 처음이신가요? 💬
                    br
                    a(href="/join").btn.btn-secondary Join &rarr;
                    | &nbsp; 
                    a(href="/users/naverLogin").btn.btn-success Naver &rarr;