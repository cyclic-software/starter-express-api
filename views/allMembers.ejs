<%- include("partials/_header") %>
    <style>
        @-moz-document url-prefix() {
            select option {
                color: gray;
            }
        }

        /* Chrome, Safari */
        @media screen and (-webkit-min-device-pixel-ratio:0) {
            select option {
                color: red;
            }
        }
    </style>

    <body>
        <!-- Topbar Start -->

        <!-- Topbar End -->


        <!-- Navbar Start -->
        <%- include("partials/_navbar") %>

            <!-- Navbar End -->


            <!-- Search Start -->
            <div class="container-fluid pt-5">
                <div class="container">
                    <div class="text-center mx-auto mb-5" style="max-width: 500px;">
                        <h5 class="d-inline-block text-primary text-uppercase border-bottom border-5">Find A Doctor</h5>
                        <h1 class="display-4 mb-4">Find A Healthcare Professionals</h1>
                        <h5 class="fw-normal">Duo ipsum erat stet dolor sea ut nonumy tempor. Tempor duo lorem eos sit
                            sed ipsum takimata ipsum sit est. Ipsum ea voluptua ipsum sit justo</h5>
                    </div>
                    <div class="mx-auto" style="width: 100%; max-width: 600px;">
                        <div class="input-group">
                            <select class="form-select border-primary w-25 " id="roleFilter" style="height: 60px;">
                                <option selected value="heqiqi_uzvler">HEQIQI UZVLER</option>
                                <option value="assosiasiyali_uzvler">ASOSIASIYALI UZVLER</option>
                                <option value="fexri_uzvler">FEXRI UZVLER</option>
                                <option value="komekci_uzvler">KOMEKCI UZVLER</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Search End -->



            <!-- Search Result Start -->
            <div class="container-fluid py-5">
                <div class="container">
                    <div class="row g-5" id="userCards">
                        <% for(user of users) { %>
                            <div class="col-lg-6 team-item card-container">
                                <div class="row g-0 bg-light rounded overflow-hidden">
                                    <div class="col-12 col-sm-5 h-100">
                                        <img class="img-fluid h-100" src="<%=user.url%>" style="object-fit: cover;">
                                    </div>
                                    <div class="col-12 col-sm-7 h-100 d-flex flex-column">
                                        <div class="mt-auto p-4">
                                            <h3> <%=user.name%> 
                                                   <%=user.surname%>
                                            </h3>
                                            <h6 class="fw-normal fst-italic text-primary mb-4">Cardiology Specialist
                                            </h6>
                                            <p class="m-0">
                                                <%=user.description%>
                                            </p>
                                            <p class="card-text d-none"><%=user.role%></p>
                                        </div>
                                        <div class="d-flex mt-auto border-top p-4">
                                            <a class="btn btn-lg btn-primary btn-lg-square rounded-circle me-3"
                                                href="<%=user.fb%>" target="_blank"><i
                                                    class="fab fa-facebook-f"></i></a>
                                            <a class="btn btn-lg btn-primary btn-lg-square rounded-circle"
                                                href="<%=user.inst%>" target="_blank"><i
                                                    class="fab fa-linkedin-in"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>

                                <div class="col-12 text-center">
                                    <button class="btn btn-primary py-3 px-5">Load More</button>
                                </div>
                    </div>
                </div>
            </div>
            <!-- Search Result End -->


            <script>
                const roleFilter = document.getElementById("roleFilter");
                const userCards = document.getElementById("userCards");

                // Kullanıcı rolüne göre filtreleme işlemini gerçekleştiren fonksiyon
                const filterUsersByRole = () => {
                    const selectedRole = roleFilter.value; // Seçilen rol değerini alın

                    // Tüm kartları seçin
                    const cards = userCards.getElementsByClassName("card-container");

                    // Her kartı döngüyle kontrol edin
                    Array.from(cards).forEach((card) => {
                        const role = card.querySelector(".card-text").textContent;

                        // Seçilen rol, kartın rolüyle eşleşiyorsa kartı gösterin, değilse gizleyin
                        if (selectedRole === "" || role === selectedRole) {
                            card.style.display = "block";
                        } else {
                            card.style.display = "none";
                        }
                    });
                };

                // Sayfa yüklendiğinde ve <select> elementinde değişiklik olduğunda filterUsersByRole fonksiyonunu çağırın
                window.addEventListener("DOMContentLoaded", () => {
                    filterUsersByRole();
                });
                roleFilter.addEventListener("change", filterUsersByRole);
            </script>
            <!-- Footer Start -->
            <%- include("partials/_footer") %>